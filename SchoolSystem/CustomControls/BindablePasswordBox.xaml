<UserControl x:Class="SchoolSystem.CustomControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolSystem.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="17.4" d:DesignWidth="800">
    
    <PasswordBox x:Name="txtPassword"
             FontSize="12"
             FontFamily="Inter"
             Foreground="{StaticResource color4}"  
             BorderThickness="0,0,0,1"
             BorderBrush="{StaticResource color3}"
             Background="Transparent"
             Padding="0,0,0,2"
             Margin="0,5,0,0"/>
</UserControl>
