<Window x:Class="SchoolSystem.View.Navigation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolSystem.View"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Navigation" Height="600" Width="1000">
    <Grid>
        <TabControl TabStripPlacement="Left">
            
            <TabItem Header="Dashboard"/>

            <TabItem Header="Academic">

                <TabControl TabStripPlacement="Left">
                    <TabItem Header="Personal Data"></TabItem>
                    <TabItem Header="Grades"></TabItem>
                    <TabItem Header="Schedule"></TabItem>
                </TabControl>

            </TabItem>

            <TabItem Header="Library">

                <TabControl TabStripPlacement="Left">
                    <TabItem Header="My Books">
                        
                    </TabItem>
                    
                    <TabItem Header="Library Catalog">
                        
                    </TabItem>
                </TabControl>

            </TabItem>

        </TabControl>
    </Grid>
</Window>
